doctype html
html
	head
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(charset="utf-8")
		title hack.chat
		link(rel="stylesheet", href="style.css")
		link(rel="stylesheet", href="katex/katex.min.css")
		link#scheme-link(rel="stylesheet", href="schemes/atelier-dune.css")
		script(src="katex/katex.min.js")
		script(src="katex/contrib/auto-render.min.js")
	body
		article.container
			#messages.messages

		footer#footer
			.container
				form#chatform.messages
					textarea#chatinput(type="text", autocomplete="off", autofocus)

		nav#sidebar
			#sidebar-content.hidden
				p
					input#pin-sidebar(type="checkbox")
					label(for="pin-sidebar") Pin sidebar
				h4 Settings
				p
					input#joined-left(type="checkbox", checked)
					label(for="joined-left") Join/left notify
				p
					input#parse-latex(type="checkbox", checked)
					label(for="parse-latex") Parse LaTeX
				h4 Desktop Notifications
				p
					input#notify-mentions(type="checkbox" onchange="updateNotifications(this)", unchecked)
					label(for="notify-mentions") Mentions
				p
					input#notify-chat(type="checkbox" onchange="updateNotifications(this)", unchecked)
					label(for="notify-chat") Chat messages
				p
					input#notify-info(type="checkbox" onchange="updateNotifications(this)", unchecked)
					label(for="notify-info") Info messages
				p
					button#clear-messages Clear messages
				h4 Color scheme
				select#scheme-selector
				h4 Users online
				p (Click user to invite)
				ul#users

		script(src="client.js")
